{

	"manifest_version": 2,
	"name": "weeboaddon",
	"author": "Dirt Land Studios",
	"version": "0.0.1",
  
	"description": "A browser addon that adds user defined links in MAL",
  
	"content_scripts": [
	  {
		"matches": ["*://*.myanimelist.net/anime/*"],
		"js": ["main.js"]
	  }
	],
	"options_ui": {
		"page": "src/options/options.html"
	},
	"permissions": ["storage", "tabs"],

	"browser_specific_settings": {
		"gecko": {
		  "id": "weeboaddon@waifu.moe"
		}
	  },
	  
	  "browser_action": {
		"default_title": "WeeboAddon",
		"default_popup": "src/popup/popup.html"
	  }
  }
  